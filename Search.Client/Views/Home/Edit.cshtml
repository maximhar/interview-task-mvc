@model RealEstateMarket.Models.Residence
<form id="edit-form">
    <table>
        <tr><td style="width:300px">City:</td><td>@Html.TextBox("city", Model.City)</td></tr>
        <tr><td>Country:</td><td>@Html.TextBox("country", Model.Country)</td></tr>
        <tr><td>Price:</td><td>@Html.TextBox("price", Model.Price)</td></tr>
        <tr><td>Area:</td><td>@Html.TextBox("area", Model.Area)</td></tr>
        <tr><td>Owner:</td><td>@Html.TextBox("owner", Model.Owner)</td></tr>
        <tr><td>Address:</td><td>@Html.TextArea("address", Model.Address)</td></tr>
        <tr>
            <td>Type:</td>
            <td>
                @Html.RadioButton("type", "apartment", Model.Type==RealEstateMarket.Models.ResidenceType.Apartment) Apartment <br />
                @Html.RadioButton("type", "house", Model.Type==RealEstateMarket.Models.ResidenceType.House) House <br />
            </td>
        </tr>
        <tr><td>
            <button type="button" id="edit-button">Confirm edit</button>
            <button type="button" id="hide-edit-button">Hide</button>
        </td></tr>
    </table>
</form>